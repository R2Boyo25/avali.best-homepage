<html color-mode="light">

<head>
    <script src="/source/cookie.js"></script>
    <link href="/source/dropdown/dropdown.css" rel="stylesheet" media="screen">
    <script src="/source/dropdown/dropdown.js"></script>
    <link href="/source/main.css" rel="stylesheet" media="screen">
    <link href="/source/slider.css" rel="stylesheet" media="screen">
    <link href="/source/table.css" rel="stylesheet" media="screen">
    <link href="/source/body-layout.css" rel="stylesheet" media="screen"> {% block head %}
    <title>Avali.Best</title>
    {% endblock %}
</head>

<body>
    <div class=topbar>
        <div>
            <a href="/">Home</a>
            <span class="verticalLine"></span>
            <a href="/sub/art">Art</a>
            <span class="verticalLine"></span>
            <a href="/sub/chat">Chat</a>
            <span class="verticalLine"></span>
            <a href="/sub/wiki">Wiki</a>
            <span class="verticalLine"></span>
            <a href="/sub/chars">Characters</a>

            <span class="topbar-right">
                <div class="dropdown">
                    <button onclick="toggleDropdown(this)" class="dropbtn" hidden><img src="/source/KazaniPFP.png" class="pfp" /></button>
                    <div class="dropdown-content">
                        <div align="center">
                            <span class=theme-toggle>
                                <label class="switch">
                                    <input type="checkbox" id="themeswitch" tabindex="0" onclick="changeTheme();"><span class="slider round"></span>
                                </label>
                            </span>
                            <img src="/source/sun.svg" height="20" width="auto" class="sicon left" style="margin-right: 5px;">
                            <img src="/source/moon.svg" height="20" width="auto" class="sicon right" style="margin-left: 5px;">
                        </div>
                        <hr>
                        <div align="center">
                            <a href="/profile">Profile</a>
                        </div>
                    </div>
                </div>
            </span>
        </div>
    </div>
    <script>
        function changeTheme() {
            let h = document.documentElement;
            if (h.getAttribute("color-mode") == "light") {
                h.setAttribute("color-mode", "dark");
            } else {
                h.setAttribute("color-mode", "light");
            }
            setCookie("theme", h.getAttribute("color-mode"));
        }
    </script>
    <script>
        if (getCookie("theme") != "") {
            let a = document.getElementById("themeswitch");
            if (getCookie("theme") == "light") {
                a.checked = false;
            } else {
                a.checked = true;
            }
            document.documentElement.setAttribute("color-mode", getCookie("theme"));
        } else {
            setCookie("theme", "light");
        }
    </script>

    <div align="center">
        <main>
            {% block body %}
            <div class="body-layout-container">
                <div class="body-layout">
                    <div class="side2">
                        <h1>AVALI</h1>
                    </div>
                    <div class="side1">
                        OR
                    </div>
                </div>
                <div class="body-layout">
                    <div class="side1">
                        <h1>AVOLI:</h1>
                    </div>
                    <div class="side2">THEY'RE</div>
                </div>

                <div class="body-layout">
                    <div class="side2">
                        STILL
                    </div>
                    <div class="side1">
                        <h1>RAVIOLI.</h1>
                    </div>
                </div>
            </div>
            <!--<table>
                <caption>TABLE</caption>
                <tr>
                    <td>a</td>
                    <td>b</td>
                    <td>c</td>
                </tr>
                <tr>
                    <td>a</td>
                    <td>b</td>
                    <td>c</td>
                </tr>
                <tr>
                    <td>a</td>
                    <td>b</td>
                    <td>c</td>
                </tr>
                <tr>
                    <td>a</td>
                    <td>b</td>
                    <td>c</td>
                </tr>
            </table>-->
            {% endblock %}
        </main>
    </div>
</body>

</html>